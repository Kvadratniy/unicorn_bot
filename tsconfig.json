{
    "compilerOptions": {
        "target": "ES2020", // поддержка приватных полей
        "module": "commonjs",
        "strict": true,
        "esModuleInterop": true,
        "skipLibCheck": true, // чтобы не падать на d.ts внутри node_modules
        "forceConsistentCasingInFileNames": true,
        "outDir": "dist"
    },
    "include": ["src/**/*"]
}
